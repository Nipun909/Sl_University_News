<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <TextView
        android:id="@+id/tvSportsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sports Department"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#4F7C82"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="50dp" />

    <TextView
        android:id="@+id/tvSportsContent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Welcome to the Sports section. Here you can find information about various sports activities, schedules, and events."
        android:textSize="16sp"
        android:textColor="#333333"
        android:padding="20dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/tvSportsTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>