<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Sl_University_News"
        tools:targetApi="31">

        <!-- Splash Screen Activity - This is the app's entry point -->
        <activity
            android:name=".SplashScreenActivity"
            android:exported="true"
            android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Login Screen Activity - Launched from the splash screen -->
        <activity
            android:name=".login_screen"
            android:exported="false">
            <!-- IMPORTANT: No MAIN and LAUNCHER intent-filter here! -->
        </activity>

        <!-- Sign Up Screen Activity - Launched from the login screen -->
        <activity
            android:name=".SignUpScreenActivity"
            android:exported="false">
            <!-- This activity is launched by Intent and should not have MAIN or LAUNCHER filters -->
        </activity>

        <!-- Add any other activities here as you create them -->

    </application>

</manifest>
