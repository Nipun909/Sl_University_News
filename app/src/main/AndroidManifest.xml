<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Sl_University_News"
        tools:targetApi="31">

        <!-- Splash Screen Activity - This will be the first activity launched -->
        <activity
            android:name=".SplashScreenActivity"
            android:exported="true"
            android:noHistory="true"> <!-- Optional: noHistory="true" prevents it from being added to the back stack -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Login Screen Activity - This will be launched by the splash screen -->
        <activity
            android:name=".login_screen"
            android:exported="false"> <!-- Usually false if not directly launchable by other apps -->
            <!-- IMPORTANT: No MAIN and LAUNCHER intent-filter here! -->
        </activity>

        <!-- Add any other activities here as you create them -->

    </application>
</manifest>
